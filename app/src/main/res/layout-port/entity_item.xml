<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemQuery"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:hint="Номер"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="@id/textViewProject"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        app:layout_constraintStart_toEndOf="@+id/textViewNumber"
        app:layout_constraintTop_toTopOf="@id/textViewNumber"
        android:hint="Дата" />

    <TextView
        android:id="@+id/textViewSum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textViewNumber"
        android:hint="Сумма" />

    <TextView
        android:id="@+id/textViewCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="@id/textViewNumber"
        app:layout_constraintTop_toBottomOf="@id/textViewNumber"
        android:hint="Компания" />

    <CheckBox
        android:id="@+id/checkBoxMark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textViewProject" />  <!-- Todo Поднять! -->

    <TextView
        android:id="@+id/textViewProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:singleLine="true"
        android:hint="Проект"
        app:layout_constraintStart_toEndOf="@id/checkBoxMark"
        app:layout_constraintTop_toBottomOf="@id/textViewCompany" />

    <TextView
        android:id="@+id/textViewClause"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="Статья"
        app:layout_constraintStart_toEndOf="@id/checkBoxMark"
        app:layout_constraintTop_toBottomOf="@id/textViewProject" />

    <TextView
        android:id="@+id/textViewComment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="Комментарий"
        app:layout_constraintStart_toEndOf="@id/checkBoxMark"
        app:layout_constraintTop_toBottomOf="@id/textViewClause" />

    <TextView
        android:id="@+id/textViewStep"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="Этап"
        app:layout_constraintStart_toEndOf="@id/checkBoxMark"
        app:layout_constraintTop_toBottomOf="@id/textViewComment" />

    <TextView
        android:id="@+id/textViewLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:drawable/screen_background_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>

