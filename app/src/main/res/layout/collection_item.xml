<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/filter_item_height"
    android:textSize="@dimen/filter_item_text_size">

    <TextView
        android:id="@+id/textViewSelectedValue"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/buttonCollectionItemAddRemove" />

    <Button
        android:id="@+id/buttonCollectionItemAddRemove"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:text=" "
        android:textSize="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/textViewSelectedValue"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>